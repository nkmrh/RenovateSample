{
    "extends": [
        "config:base"
    ],
    "labels": [
        "dependencies"
    ],
    "rangeStrategy": "update-lockfile",
    "regexManagers": [{
        "fileMatch": ["^project.yml$"],
        "matchStrings": [
            "url:\\shttps:\/\/github.com\/(?<depName>.*?).git\\s.*:\\s(?<currentValue>[0-9.]+)"
        ],
        "datasourceTemplate": "github-releases"
    }]
}