{
    "extends": [
        "config:base"
    ],
    "labels": [
        "dependencies"
    ],
    "rangeStrategy": "update-lockfile",
    "regexManagers": [{
            "fileMatch": ["^project.yml$"],
            "matchStrings": [
                "url:\\shttps:\/\/github.com\/(?<depName>.*?).git\\s.*:\\s(?<currentValue>.*)"
            ],
            "extractVersionTemplate": "^v(?<version>.*)$",
            "datasourceTemplate": "github-releases"
        },
        {
            "fileMatch": ["^Mintfile$"],
            "matchStrings": [
                "(?<depName>.*?)@(?<currentValue>.*)"
            ],
            "datasourceTemplate": "github-releases"
        }
    ]
}